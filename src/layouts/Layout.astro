---
interface Props {
	title: string;
}
import '@fontsource-variable/onest';

import Header from '../components/Header.astro'
import Contacto from '../components/Contacto.astro';
import Presentacion from '../components/Presentacion.astro';
import Experience from '../components/Experience.astro';
import Footer from '../components/Footer.astro';
import Projects from '../components/projects/Projects.astro';
import ProjectsTesting from '../components/projects/ProjectsTesting.astro';
import Skills from '../components/Skills.astro'
import ThanksCard from '../components/ThanksCard.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Porfolio Samuel Gauna - Desarrollador y Programador Web</title>
	</head>
	<body class="relative top-0 z-[-2] h-screen w-screen bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px]">
		<Header/>
		<Presentacion></Presentacion>
		<Contacto></Contacto>
		<Skills></Skills>
		<Experience ></Experience>
		<Projects></Projects>
		<ProjectsTesting></ProjectsTesting>
		<ThanksCard></ThanksCard>
		<Footer></Footer>
		<slot />
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
	</body>
</html>
<style is:global>
    :root {
        color-scheme: light dark;
    }
    html {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        font-family: 'Onest Variable', system-ui, sans-serif;
        scroll-behavior: smooth;
        width: 100%;
        height: 100%;
        color: aliceblue;
        display: flex;
        flex-direction: column;
    }
</style>